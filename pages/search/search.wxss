/**index.wxss**/

.container {
  width: 100%;
  background: #eee;
}

.topbar {
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #039;
  display: flex;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
  padding: 0 16rpx;
  z-index: 20;
}

.left, .center, .right {
  display: inline-block;
  height: 50rpx;
}

.center {
  position: relative;
  box-sizing: border-box;
  width: 75%;
}

.ic_search {
  position:absolute;
top:9rpx;
left:23rpx;

}

input {
  height: 48rpx;
  border: 2rpx solid #fccd12;
  border-radius: 30rpx;
  background: #fff;
  padding-left: 60rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #999;
}


.histRecomm{
  box-sizing: border-box;
  position: absolute;
  top: 80rpx;
  width: 100%;
  padding: 20rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background: #dddddd;
}
.histRecomm .title{
  display: block;
  font-size: 24rpx;
  line-height: 30rpx;
}

.histRecomm .item{
  display: inline-block;
  font-size: 24rpx;
  line-height: 30rpx;
  background: #ffffff;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
}

.histRecomm .recommend{
  margin-top: 20rpx;
}