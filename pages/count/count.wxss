/* pages/count/count.wxss */
.wrapper {
  height: 100vh;
  background: #f0f0f0;
}
.wrapper .top{
  display: flex;
  justify-content: space-around;
  width: 100%;
  background: #ffffff;
  padding: 10rpx 0;
}
.wrapper .top .left{ 
  width: 75%;
}
.wrapper .top .left input{ 
  background: #f0f0f0;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  border-radius: 6rpx;padding: 0 20rpx;
}
.wrapper .top .right{ 
  width: 15%;
}
.wrapper .top .right text{
  height: 60rpx;
  font-size: 36rpx;
  line-height: 60rpx;
  text-align: center;
}
.wrapper .countWrapper{
  box-sizing: border-box;
  width: 90%;
  margin: 0 auto;
  border-radius: 10rpx;
  padding: 30rpx;
  background: #ffffff;
  margin-top: 20rpx;
  box-shadow: 0 0 3px #eeeeee;
}
.wrapper .countWrapper .inner .title{
  font-size: 32rpx;
  line-height: 40rpx;
  color: #999999;
}
.wrapper .countWrapper .inner .count{
  height: 100rpx;
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #dd0000;
  letter-spacing: 2rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-top: 20rpx;
}
.wrapper .countWrapper .inner .count .num{
  font-size: 80rpx;
  line-height: 100rpx;
}
.wrapper .countWrapper .inner .detail{
  display: flex;
  margin-top: 10rpx;
}
.wrapper .countWrapper .inner .detail .left{
  width: 49%;
  border-right: 2rpx dashed #f0f0f0;
}

.wrapper .countWrapper .inner .detail .left .title{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
}
.wrapper .countWrapper .inner .detail .left  .count{
  height: 60rpx;
  display: block;
  font-size: 32rpx;
  color: #333333;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  padding-top: 0;
  border-bottom: none
}
.wrapper .countWrapper .inner .detail .right .title{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
  padding-left: 20rpx;
}
.wrapper .countWrapper .inner .detail .right  .count{
  height: 60rpx;
  display: block;
  font-size: 32rpx;
  color: #333333;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  padding-left: 20rpx;
  padding-top: 0;
  border-bottom: none
}