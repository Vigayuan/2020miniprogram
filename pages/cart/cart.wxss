/* pages/cart/cart.wxss */

.container{
  background: #efefef;
}

.container .mainWrapper{
  width: 94%;
  margin: 20rpx auto 100rpx;
}
.container .mainWrapper .item{
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
}
.container .mainWrapper .item .itemWrapper{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  vertical-align: middle;
  justify-content: space-between;
  padding: 10rpx;
}
.container .mainWrapper .item .itemWrapper .left{
  box-sizing: border-box;
  width: 200rpx;
  height: 200rpx;
}
.container .mainWrapper .item .itemWrapper .left image{
  width: 200rpx;
}
.container .mainWrapper .item .itemWrapper .center{
  flex: 1;
  margin-left: 20rpx;
}
.container .mainWrapper .item .itemWrapper .center .top{
  height: 140rpx;
}
.container .mainWrapper .item .itemWrapper .center .bottom{
  display: flex;
  height: 60rpx;
  justify-content: space-between;
}
.container .mainWrapper .item .itemWrapper .center .bottom .price{
  font-size: 28rpx;
  color: #dd0000;
}
.container .mainWrapper .item .itemWrapper .center .bottom .price .price-num{
  font-size: 36rpx;
  font-weight: bold;
}
.container .mainWrapper .item .itemWrapper .center .bottom .num-control{
 display: flex;
   width: 150rpx;
}
.container .mainWrapper .item .itemWrapper .center .bottom .num-control .num{
  text-align: center;
 width: 70rpx;
}
.container .mainWrapper .item .itemWrapper .right{
  width: 10%;
}
.container .bottomBar{
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  vertical-align: middle;
  justify-content: space-between;
  background: #dddddd;
}
.container .bottomBar .total{
  box-sizing: border-box;
    width: 70%;
    padding: 10rpx 40rpx;
}
.container .bottomBar .price{
  font-size: 28rpx;
  line-height: 60rpx;
  color: #333333;
}
.container .bottomBar .price text{
  font-size: 32rpx;
  vertical-align: -2rpx;
  font-weight: bold;
}
.container .bottomBar .goToPay{
  width: 30%;
  padding: 10rpx 40rpx;
  text-align: center;
  color: #ffffff;
  background: #dd0000;
}
.container .bottomBar .goToPay text{
  font-size: 36rpx;
  line-height: 60rpx;
  letter-spacing: 4rpx;
  font-weight: bold;
}
