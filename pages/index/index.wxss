/**index.wxss**/

.container {
  width: 100%;
  background: #eee;
}

.topbar {
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #039;
  display: flex;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
  padding: 0 16rpx;
  z-index: 20;
}

.left, .center, .right {
  display: inline-block;
  height: 50rpx;
}

.center {
  position: relative;
  box-sizing: border-box;
  width: 75%;
}

.ic_search {
  position: absolute;
  top: 9rpx;
  left: 23rpx;
}

input {
  height: 48rpx;
  border: 2rpx solid #fccd12;
  border-radius: 30rpx;
  background: #fff;
  padding-left: 60rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #999;
}

.swiper {
  width: 100vw;
  height: 400rpx;
  background: #999;
}

swiper {
  height: 100%;
}

.swiper swiper-item image {
  width: 100%;
  height: 100%;
}

.scroll {
  width: 94vw;
  margin: 20rpx 3vw;
  background: #fff;
  border-radius: 15rpx;
}

scroll-view {
  white-space: nowrap;
}

.scroll-item {
  display: inline-block;
  width: 160rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  vertical-align: top;
}

.scroll-item .inner {
  font-size: 13px;
  line-height: 1.1;
  margin-bottom: 20rpx;
}

.scroll-item image {
  width: 88rpx;
}

.category {
  width: 94vw;
  margin: 0 3vw 20rpx;
  display: flex;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
}

.category .inner {
  display: inline-block;
  width: 20%;
  font-size: 13px;
  line-height: 1.1;
  text-align: center;
  padding: 10rpx;
  background: #fff;
  border-radius: 15rpx;
}

.inner image {
  margin-bottom: 15rpx;
}

.banner-m {
  width: 94vw;
  margin: 0 3vw 20rpx;
}

.banner-m image {
  width: 100%;
}

.banner-lr {
  width: 94vw;
  margin: 0 3vw 20rpx;
  display: flex;
  justify-content: space-between;
  -webkit-box-align: justify;
  align-items: center;
}

.banner-l image, .banner-r image {
  width: 330rpx;
  border-radius: 5rpx;
}

.pdTitle {
  width: 94vw;
  margin: 0 auto 20rpx;
  text-align: left;
  font-size: 14px;
  font-weight: bold;
}

.tabArea {
  width: 90vw;
  margin: 0 auto 20rpx;
  background: #fff;
  border-radius: 15rpx;
  padding: 2vw;
}

.tabs-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.tabs-item {
  width: 25%;
  height: 60rpx;
  color: #999;
  font-size: 12px;
  line-height: 1.2;
  text-align: center;
  border-bottom: 2rpx solid #999999;
}
.selected{
  color: #039;
  border-bottom: 2rpx solid #039;
}
